
local screenGui = script.Parent
local textBox = screenGui:FindFirstChildWhichIsA("TextBox")
local button = screenGui:FindFirstChildWhichIsA("TextButton")
local label = screenGui:FindFirstChildWhichIsA("TextLabel")


local colorNormal = Color3.new(1, 1, 1) -- white
local colorWrong = Color3.new(1, 0, 0) -- red
local colorCorrect = Color3.new(0, 1, 0) -- green



local a = math.random(1, 10)
local b = math.random(1, 10)
local answer = a + b
label.Text = tostring(a).." + "..tostring(b).." = ?"


textBox.ClearTextOnFocus = true
textBox.Text = ""
textBox.PlaceholderText = "請輸入"
textBox.BackgroundColor3 = colorNormal

button.MouseButton1Click:Connect(function()
	local userInput = tonumber(textBox.Text)
	
	if userInput == answer then
		textBox.BackgroundColor3 = colorCorrect
	else
		textBox.BackgroundColor3 = colorWrong
	end
end)

textBox.Focused:Connect(function()
	textBox.BackgroundColor3 = colorNormal
end)






